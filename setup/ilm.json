{
  "policy" : {
    "phases" : {
      "hot" : {
        "actions" : {
          "rollover" : {
            "max_size" : "30gb",
            "max_age":"7d"
          },
          "allocate" : {
            "number_of_replicas" : 1
          },
          "shrink": {
            "number_of_shards": 10
          },
          "set_priority": {
            "priority": 50
          }
        }
      },
      "warm" : {
        "min_age" : "7d",
        "actions" : {
          "readonly" : { },
          "allocate" : {
            "number_of_replicas" : 1,
            "include" : {
              "size" : "warm"
            }
          },
          "forcemerge": {
            "max_num_segments": 1
          },
          "shrink": {
            "number_of_shards": 10
          },
          "set_priority": {
            "priority": 25
          }
        }
      },
      "cold" : {
        "min_age" : "30d",
        "actions" : {
          "allocate" : {
            "number_of_replicas" : 0,
            "include" : {
              "size" : "cold"
            }
          },
          "shrink": {
            "number_of_shards": 10
          },
          "freeze" : { },
          "set_priority": {
            "priority": 0
          }
        }
      },
      "delete" : {
        "min_age" : "60d",
        "actions" : {
          "wait_for_snapshot" : {
            "policy": "ten_min_snapshot"
          },
          "delete" : { }
        }
      }
    }
  }
}
